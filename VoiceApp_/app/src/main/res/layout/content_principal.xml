<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="8dp"
    android:paddingVertical="8dp"
    tools:context="com.appdiccion.andresbertel.voiceapp_.inicio">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:layout_weight="1.02"
            android:background="@mipmap/bannerok" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/messageTextView"
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/messageTextView2"
                android:layout_marginLeft="15dp"
                android:hint="TU DIRECCION"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/messageTextView2"
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.16"
                android:hint="LATITUD - LONGITUD"
                android:textColor="@color/colorAccent"
                android:textColorHint="@color/colorAccent"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:layout_margin="10dp"
            android:background="@mipmap/alertarok"
            android:contentDescription=""
            android:text="VIOLENTOMETRO"
            tools:ignore="ContentDescription,HardcodedText,NestedWeights" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/bntinformate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@mipmap/informateok"
            android:contentDescription=""
            android:text="VIOLENTOMETRO"
            tools:ignore="ContentDescription,HardcodedText" />

        <ImageButton
            android:id="@+id/btnapoya"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@mipmap/apoyaok"
            android:contentDescription=""
            android:text="VIOLENTOMETRO"
            tools:ignore="ContentDescription,HardcodedText" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/btnviolentometro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@mipmap/bntviolentometrook"
            android:contentDescription=""
            android:text="VIOLENTOMETRO"
            tools:ignore="ContentDescription,HardcodedText" />


    </LinearLayout>


</LinearLayout>
